<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="520" prefWidth="900"
            stylesheets="@/sigmacine/ui/views/sigma.css"
            style="-fx-background-color:#0B0B0B;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sigmacine.ui.controller.InfoPersonalController">

    <!-- Barra superior -->
    <top>
        <fx:include fx:id="barraInclude" source="barra.fxml"/>
    </top>

    <!-- Contenido general -->
    <center>
        <StackPane alignment="TOP_CENTER">
            <padding>
                <Insets top="30" bottom="30" left="30" right="30"/>
            </padding>

            <!-- Card central -->
            <HBox prefWidth="820" spacing="36"
                  style="-fx-background-color:#1A1A1A;
                         -fx-background-radius:18;
                         -fx-padding:32;
                         -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.35), 20, 0, 0, 4);">

                <!-- Avatar -->
                <VBox alignment="TOP_CENTER" spacing="16">

                    <Label text="Tu perfil"
                           style="-fx-text-fill:white; -fx-font-size:20px; -fx-font-weight:bold;"/>

                    <StackPane fx:id="avatarPane" prefHeight="170" prefWidth="170"
                               style="-fx-background-color:#222;
                                      -fx-border-color:#444;
                                      -fx-border-radius:100;
                                      -fx-background-radius:100;">
                        <padding>
                            <!-- CORRECCIÓN: usar top/right/bottom/left en lugar de "all" -->
                            <Insets top="8" right="8" bottom="8" left="8"/>
                        </padding>

                        <children>
                            <ImageView fx:id="avatarImage"
                                       fitHeight="150" fitWidth="150"
                                       preserveRatio="true"/>
                        </children>
                    </StackPane>

                    <Button fx:id="btnCambiarFoto" onAction="#onCambiarFoto"
                            text="Cambiar foto"
                            style="-fx-background-color:#B0372F;
                                   -fx-background-radius:16;
                                   -fx-text-fill:white;
                                   -fx-font-weight:bold;
                                   -fx-padding:6 20;"/>

                </VBox>

                <!-- Formulario -->
                <GridPane hgap="20" vgap="18">

                    <columnConstraints>
                        <ColumnConstraints prefWidth="200"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <children>

                        <!-- NOMBRES -->
                        <Label text="Nombres:"
                               GridPane.rowIndex="0" GridPane.columnIndex="0"
                               style="-fx-text-fill:#EEEEEE; -fx-font-size:14px; -fx-font-weight:bold;"/>
                        <TextField fx:id="txtNombres" promptText="Tus nombres"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"
                                   style="-fx-background-color:#2A2A2A; -fx-text-fill:white;"/>

                        <!-- EMAIL -->
                        <Label text="Email:"
                               GridPane.rowIndex="1" GridPane.columnIndex="0"
                               style="-fx-text-fill:#EEEEEE; -fx-font-size:14px; -fx-font-weight:bold;"/>
                        <TextField fx:id="txtEmail" promptText="correo@ejemplo.com" editable="true"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"
                                   style="-fx-background-color:#2A2A2A; -fx-text-fill:white;"/>

                        <!-- TELEFONO -->
                        <Label text="Teléfono:"
                               GridPane.rowIndex="2" GridPane.columnIndex="0"
                               style="-fx-text-fill:#EEEEEE; -fx-font-size:14px; -fx-font-weight:bold;"/>
                        <TextField fx:id="txtTelefono" promptText="+57 300 000 0000"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"
                                   style="-fx-background-color:#2A2A2A; -fx-text-fill:white;"/>

                        <!-- NACIMIENTO -->
                        <Label text="Fecha de nacimiento:"
                               GridPane.rowIndex="3" GridPane.columnIndex="0"
                               style="-fx-text-fill:#EEEEEE; -fx-font-size:14px; -fx-font-weight:bold;"/>
                        <DatePicker fx:id="dpFechaNacimiento"
                                    GridPane.rowIndex="3" GridPane.columnIndex="1"
                                    style="-fx-background-color:#2A2A2A; -fx-text-fill:white;"/>

                        <!-- CONTRASEÑA -->
                        <Label text="Nueva contraseña:"
                               GridPane.rowIndex="4" GridPane.columnIndex="0"
                               style="-fx-text-fill:#EEEEEE; -fx-font-size:14px; -fx-font-weight:bold;"/>
                        <PasswordField fx:id="txtNuevaClave" promptText="••••••••"
                                       GridPane.rowIndex="4" GridPane.columnIndex="1"
                                       style="-fx-background-color:#2A2A2A; -fx-text-fill:white;"/>

                        <!-- BOTONES -->
                        <HBox GridPane.rowIndex="5" GridPane.columnIndex="1"
                              alignment="CENTER_RIGHT" spacing="16">
                            
                            <Label fx:id="lblMensaje" visible="false"
                                   style="-fx-text-fill:#FFC533;
                                          -fx-font-size:13px;"/>

                            <Region HBox.hgrow="ALWAYS"/>

                            <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelar"
                                    style="-fx-background-color:transparent;
                                           -fx-border-color:#B0372F;
                                           -fx-border-radius:16;
                                           -fx-text-fill:white;
                                           -fx-font-weight:bold;
                                           -fx-padding:6 20;"/>

                            <Button fx:id="btnGuardar" text="Guardar cambios" onAction="#onGuardar"
                                    style="-fx-background-color:#B0372F;
                                           -fx-background-radius:16;
                                           -fx-text-fill:white;
                                           -fx-font-weight:bold;
                                           -fx-padding:6 20;"/>
                        </HBox>

                    </children>
                </GridPane>

            </HBox>
        </StackPane>
    </center>

</BorderPane>
