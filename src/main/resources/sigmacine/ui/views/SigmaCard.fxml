<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sigmacine.ui.controller.SigmaCardController"
            prefWidth="900" prefHeight="520"
            stylesheets="@sigma.css"
            style="-fx-background-color: #000;">

    <top>
         <fx:include source="barra.fxml"/>  
    </top>


    <center>
        <VBox spacing="24" alignment="CENTER">
            <children>
                <Label text="Mi SigmaCard" style="-fx-text-fill: #fff; -fx-font-weight: bold;">
                    <font><Font size="34"/></font>
                </Label>
                <Label text="Gestiona tu tarjeta de fidelidad" style="-fx-text-fill:#ccc; -fx-font-size: 16px;"/>
                <Separator/>
                <StackPane alignment="CENTER">
                    <VBox spacing="16" alignment="CENTER" style="-fx-background-color: #181818; -fx-background-radius: 18; -fx-padding: 32 40;">
                        <children>
                            <Label text="Número de Identificación" style="-fx-text-fill:#fff; -fx-font-weight:bold; -fx-font-size: 15px;"/>
                            <TextField fx:id="txtIdentificacion" promptText="Número de Identificación" prefWidth="340" styleClass="input"/>
                            <Label fx:id="lblPin" text="Pin de la tarjeta" style="-fx-text-fill:#fff; -fx-font-weight:bold; -fx-font-size: 15px;"/>
                            <PasswordField fx:id="txtPin" promptText="Pin de la tarjeta" prefWidth="340" styleClass="input"/>
                            <VBox alignment="CENTER" maxWidth="Infinity" spacing="15">
                                <children>
                                    <Button fx:id="btnRegistrarme" text="Registrarme" styleClass="primary-btn" prefWidth="200"/>
                                    <HBox spacing="20" alignment="CENTER">
                                        <children>
                                            <Button fx:id="btnRecargar" text="Recargar" styleClass="primary-btn" prefWidth="150"/>
                                            <Button fx:id="btnVerMonto" text="Ver Monto" styleClass="primary-btn" prefWidth="150"/>
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>
                        </children>
                    </VBox>
                </StackPane>
                <Label fx:id="lblFeedback" text="" style="-fx-text-fill: #e53935; -fx-font-size: 15px; -fx-padding: 10 0 0 0;"/>
            </children>
            <padding><Insets top="32" right="0" bottom="32" left="0"/></padding>
            <maxWidth>600.0</maxWidth>
        </VBox>
    </center>

</BorderPane>
