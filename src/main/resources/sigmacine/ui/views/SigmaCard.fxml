<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sigmacine.ui.controller.SigmaCardController"
            prefWidth="900" prefHeight="520"
            stylesheets="@sigma.css"
            style="-fx-background-color: #000;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" BorderPane.alignment="CENTER" styleClass="topbar">
            <children>
                <Label text="SIGMA CINE" styleClass="brand" onMouseClicked="#onBrandClick" style="-fx-cursor: hand;"/>

                <Button fx:id="btnCartelera"  text="Cartelera"  styleClass="toplink"/>
                <Button fx:id="btnConfiteria" text="Confitería" styleClass="toplink"/>
                <Button fx:id="btnSigmaCardTop"  text="Sigma Card" styleClass="toplink"/>

                <Region HBox.hgrow="ALWAYS"/>

                <TextField fx:id="txtBuscarTop" promptText="Buscar" prefWidth="200" styleClass="search"/>
                <Button fx:id="btnBuscarTop" text="Buscar" />

                <Button fx:id="btnCartTop" text="Cart" styleClass="toplink"/>

                <Button fx:id="btnIniciarSesionTop" text="Iniciar sesión" styleClass="toplink"/>
                <Button fx:id="btnRegistrarseTop" text="Registrarse" styleClass="toplink"/>
            </children>
            <padding><Insets top="10" right="16" bottom="10" left="16"/></padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="18" alignment="TOP_CENTER">
            <children>
                <Label text="Mi SigmaCard" style="-fx-text-fill: #fff; -fx-font-weight: bold;">
                    <font><Font size="34"/></font>
                </Label>
                <Label text="Ingresa los datos de tu SigmaCard" style="-fx-text-fill:#ccc;"/>
                <Separator/>

                <!-- Center the form and increase widths for better visibility -->
                <GridPane hgap="12" vgap="12" prefWidth="760" maxWidth="760">
                    <padding><Insets top="12" right="8" bottom="8" left="8"/></padding>

                    <Label text="Número de Identificación" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill:#fff; -fx-font-weight:bold;"/>
                    <TextField fx:id="txtIdentificacion" promptText="Número de Identificación" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="600" styleClass="input"/>

                    <Label text="Pin de la tarjeta" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-text-fill:#fff; -fx-font-weight:bold;"/>
                    <PasswordField fx:id="txtPin" promptText="Pin de la tarjeta" GridPane.rowIndex="3" GridPane.columnIndex="0" prefWidth="600" styleClass="input"/>

                </GridPane>

                <HBox spacing="20" alignment="CENTER">
                    <children>
                        <Button fx:id="btnRegistrarme" text="Registrarme" styleClass="primary-btn"/>
                        <Button fx:id="btnRecargar" text="Recargar" styleClass="primary-btn"/>
                        <Button fx:id="btnVerMonto" text="Ver Monto" styleClass="primary-btn"/>
                    </children>
                </HBox>

                <Label fx:id="lblFeedback" text="" style="-fx-text-fill: #e53935;"/>

            </children>
            <padding><Insets top="24" right="80" bottom="24" left="80"/></padding>
            <maxWidth>900.0</maxWidth>
        </VBox>
    </center>

</BorderPane>
