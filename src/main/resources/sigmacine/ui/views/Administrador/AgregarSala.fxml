<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane
        xmlns="http://javafx.com/javafx/24.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="sigmacine.ui.controller.admin.AgregarSalaController"
        prefHeight="400.0" prefWidth="600.0"
        style="-fx-background-color: #000000;">

    <top>
        <BorderPane prefHeight="52.0" style="-fx-background-color: #993726;">
            <center>
                <Text text="Agregar Sala" fill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Text>
            </center>
        </BorderPane>
    </top>

    <center>
        <GridPane prefHeight="305.0" prefWidth="342.0">
            <columnConstraints>
                <ColumnConstraints prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="48.0" />
                <RowConstraints prefHeight="45.0" />
                <RowConstraints prefHeight="41.2" />
                <RowConstraints prefHeight="49.2" />
                <RowConstraints prefHeight="42.8" />
                <RowConstraints prefHeight="47.4" />
                <RowConstraints prefHeight="41.2" />
            </rowConstraints>
            <children>
                <Text text="Ingrese ID:" fill="WHITE" />
                <TextField fx:id="txtId" GridPane.rowIndex="1" prefWidth="211.0" />

                <Text text="Ingrese aforo de la sala:" fill="WHITE" GridPane.rowIndex="2" />
                <TextField fx:id="txtAforo" GridPane.rowIndex="3" prefWidth="211.0" />

                <Text text="Ingrese la sede:" fill="WHITE" GridPane.rowIndex="4" />
                <TextField fx:id="txtSede" GridPane.rowIndex="5" prefWidth="211.0" />

                <Button fx:id="btnAgregarSala"
                        text="Agregar Sala"
                        onAction="#agregarSala"
                        style="-fx-background-color: #993726; -fx-text-fill: white;"
                        GridPane.rowIndex="6"
                        GridPane.halignment="CENTER" />

            </children>
        </GridPane>
    </center>
</BorderPane>
