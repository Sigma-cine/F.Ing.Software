<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@sigma.css" fx:controller="sigmacine.ui.controller.CarteleraController">
    <top>
        <fx:include source="barra.fxml"/>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="16" alignment="TOP_CENTER" style="-fx-padding: 16;">
                    <Label text="Cartelera" style="-fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-font-size: 24;" />
                    <HBox spacing="12" alignment="CENTER">
                        <Label text="Filtrar por género:" style="-fx-text-fill: #ffffff; -fx-font-size: 14;" />
                        <ComboBox fx:id="cbGenero" prefWidth="200" promptText="Todos los géneros" />
                    </HBox>
                    <FlowPane fx:id="gridPeliculas" hgap="16" vgap="16" alignment="CENTER" />
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>